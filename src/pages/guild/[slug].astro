---
import "agnostic-css/src/components/table/table.css";

import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
    const response = await fetch("http://miniserver:8080/guilds/details");
    const guilds = await response.json();

    return guilds.guildDetails.map((guild) => {
        return {
            params: { slug: guild.guildId },
            props: { guild },
        };
    });
}

const { guild } = Astro.props;
---

<Layout>
    <div class="container">
        <h1>{guild.name}</h1>

        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Galactic Power</th>
                    <th>Character Galactic Power</th>
                    <th>Ship Galactic Power</th>
                </tr>
            </thead>
            <tbody>
                {guild.playerProfiles.map((member) => {
                    return (
                        <tr>
                            <td>{member.name}</td>
                            <td>{member.galacticPower.toLocaleString()}</td>
                            <td>{member.characterGalacticPower.toLocaleString()}</td>
                            <td>{member.shipGalacticPower.toLocaleString()}</td>
                        </tr>
                    );
                })}
            </tbody>
        </table>
    </div>
</Layout>
